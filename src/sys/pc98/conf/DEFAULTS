# $FreeBSD: release/10.0.0/sys/pc98/conf/DEFAULTS 232619 2012-03-06 20:01:25Z attilio $

machine		pc98 i386
options 	PC98

# Bus support.
device		isa
options 	ISAPNP

# Floating point support.
device		npx

# Pseudo devices.
device		mem		# Memory and kernel memory devices
device		io		# I/O device

# UART chips on this platform
device		uart_ns8250
#device		uart_i8251

# Default partitioning schemes
options 	GEOM_PART_BSD
options 	GEOM_PART_PC98

# enable support for native hardware
device		atpic

options 	NEW_PCIB
